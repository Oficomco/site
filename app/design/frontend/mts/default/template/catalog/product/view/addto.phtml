<?php $_product = $this->getProduct(); ?>
<?php $_wishlistSubmitUrl = $this->helper('wishlist')->getAddUrl($_product); ?>

<ul class="add-to-links">
<?php
    $_compareUrl = $this->helper('catalog/product_compare')->getAddUrl($_product);
?>
<?php if($_compareUrl) : ?>
    <li class="first"> <a href="<?php echo $_compareUrl ?>" title="<?php // echo $this->__('Add to Compare') ?>" class="link-compare"><div class="tooltip"><?php echo $this->__('Add to Compare') ?><div class="errow"></div></div></a></li>
<?php endif; ?>

<?php if ($this->helper('wishlist')->isAllow()) : ?>
    <li><span class="separator">|</span><a href="<?php echo $_wishlistSubmitUrl ?>" title="<?php // echo $this->__('Add to Wishlist') ?>" class="link-wishlist"><div class="tooltip"><?php echo $this->__('Add to Wishlist') ?><div class="errow"></div></div></a></li>
<?php endif; ?>


<?php if ($this->canEmailToFriend()): ?>
    <li class="last"><span class="separator">|</span> <a href="<?php echo $this->helper('catalog/product')->getEmailToFriendUrl($_product) ?>" title="<?php // echo $this->__('Email to a Friend') ?>" class="link-email"><div class="tooltip"><?php echo $this->__('Email to a Friend') ?><div class="errow"></div></div></a></li>
    <?php endif; ?>

</ul>
  
